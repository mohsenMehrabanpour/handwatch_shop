     <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 p-5 shadow shadow-lg bg-light my-rtl mt-5">
                <form method="post">
                    {{#if success_msg}}
                    <p class="text-align-right alert alert-success font-weight-bold">{{success_msg}}</p>
                    {{/if}}
                    {{#if error}}
                    <p class="text-align-right alert alert-danger font-weight-bold">{{error}}</p>
                    {{/if}}
